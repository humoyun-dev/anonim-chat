<%- include("partials/layout-top", { title, active }) %>

<div class="container-fluid">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h1 class="h4 m-0">Dashboard Analytics</h1>
    <a class="btn btn-sm btn-outline-light" href="/chat">Open Chat</a>
  </div>

  <div class="row g-3">
    <div class="col-md-4">
      <div class="card border-0 shadow-sm" style="background: rgba(96,165,250,0.12); color: white;">
        <div class="card-body">
          <div class="text-white-50">Total Users</div>
          <div class="display-6 fw-bold"><%= userCount %></div>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card border-0 shadow-sm" style="background: rgba(34,197,94,0.12); color: white;">
        <div class="card-body">
          <div class="text-white-50">Total Messages</div>
          <div class="display-6 fw-bold"><%= messageCount %></div>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card border-0 shadow-sm" style="background: rgba(251,191,36,0.14); color: white;">
        <div class="card-body">
          <div class="text-white-50">Total Sessions</div>
          <div class="display-6 fw-bold"><%= sessionCount %></div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include("partials/layout-bottom") %>
