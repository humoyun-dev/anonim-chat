<!DOCTYPE html>
<html lang="uz">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>User <%= userId %> Conversation</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .chat-container {
      max-width: 800px;
      margin: auto;
      border: 1px solid #dee2e6;
      padding: 15px;
      border-radius: 5px;
      background-color: #f8f9fa;
    }
    .chat-bubble {
      max-width: 70%;
      padding: 10px 15px;
      border-radius: 15px;
      margin-bottom: 10px;
      position: relative;
    }
    .chat-time {
      font-size: 0.8rem;
      margin-top: 5px;
      color: #6c757d;
    }
  </style>
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
    <div class="container-fluid">
      <a class="navbar-brand" href="/dashboard">Dashboard</a>
      <div class="d-flex">
        <a class="btn btn-outline-light me-2" href="/users">Users</a>
        <a class="btn btn-outline-light" href="/logout">Logout</a>
      </div>
    </div>
  </nav>
  <div class="container chat-container">
    <h2 class="mb-4 text-center">Foydalanuvchi <%= userId %> Konversatsiyasi</h2>
    <div class="chat">
      <% messages.forEach(message => { %>
        <% if (message.sender === userId) { %>
          <!-- Outgoing message (sent by the user) -->
          <div class="d-flex justify-content-end">
            <div class="chat-bubble bg-primary text-white">
              <div><%= message.text %></div>
              <div class="chat-time text-end"><%= new Date(message.timestamp).toLocaleString() %></div>
            </div>
          </div>
        <% } else { %>
          <!-- Incoming message (received by the user) -->
          <div class="d-flex justify-content-start">
            <div class="chat-bubble bg-light border">
              <div><%= message.text %></div>
              <div class="chat-time text-start"><%= new Date(message.timestamp).toLocaleString() %></div>
            </div>
          </div>
        <% } %>
      <% }); %>
    </div>
    <div class="text-center mt-4">
      <a href="/users" class="btn btn-secondary">Back to Users List</a>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
