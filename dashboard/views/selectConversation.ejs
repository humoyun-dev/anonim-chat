<!DOCTYPE html>
<html lang="uz">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Konversatsiya Tanlash</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
    <div class="container-fluid">
      <a class="navbar-brand" href="/dashboard">Dashboard</a>
      <div class="d-flex">
        <a class="btn btn-outline-light" href="/logout">Logout</a>
      </div>
    </div>
  </nav>
  <div class="container">
    <h2 class="mb-4">Ikkala foydalanuvchini tanlang</h2>
    <% if (error) { %>
      <div class="alert alert-danger"><%= error %></div>
    <% } %>
    <form action="/conversation" method="POST">
      <div class="mb-3">
        <label for="sender" class="form-label">Yozuvchi foydalanuvchi</label>
        <select id="sender" name="sender" class="form-select" required>
          <option value="">Tanlang...</option>
          <% users.forEach(user => { %>
            <option value="<%= user.userId %>">
              <%= user.firstName %> <%= user.lastName %> (@<%= user.username %>) [ID: <%= user.userId %>]
            </option>
          <% }) %>
        </select>
      </div>
      <div class="mb-3">
        <label for="receiver" class="form-label">Qabul qiluvchi foydalanuvchi</label>
        <select id="receiver" name="receiver" class="form-select" required>
          <option value="">Tanlang...</option>
          <% users.forEach(user => { %>
            <option value="<%= user.userId %>">
              <%= user.firstName %> <%= user.lastName %> (@<%= user.username %>) [ID: <%= user.userId %>]
            </option>
          <% }) %>
        </select>
      </div>
      <button type="submit" class="btn btn-primary">Konversatsiyani ko'rsatish</button>
    </form>
    <div class="mt-3">
      <a href="/dashboard" class="btn btn-secondary">Back to Dashboard</a>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
